#include "mlx_utils.h"

void	let_s_get_started(t_program *data)
{
	setInterval(function() {
		clearScreen();
		rayCasting();
	}, data->render->delay);
}

function clearScreen() {
	screenContext.clearRect(0, 0, data.screen.width, data.screen.height);
}

function rayCasting() {}

